#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int n;
    do 
    {
        n = get_int("size: ");
    
    }
    
    while (n < 1|| n > 8);
    
    // Fro each row
    for (int i = 0; i < n; i++)
      {
           for (int k = n - i; k > 1; k--)
            {
                printf (" ");
            }
       
        {
         // For each column
        for (int j = 0; j < i+1; j++)
            {
             //Print a brick
             printf ("#");
            }
        }
        
     // Move to next row
     printf("\n");
     
      }
}
